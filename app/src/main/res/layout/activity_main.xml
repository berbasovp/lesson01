<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.berbasov.weather.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/fon" />

    <LinearLayout
        style="@style/CenterBlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/wind"
            style="@style/HaracStyle"
            android:text="@string/windPower" />

        <CheckBox
            android:id="@+id/damp"
            style="@style/HaracStyle"
            android:text="@string/humidity" />

        <CheckBox
            android:id="@+id/pressure"
            style="@style/HaracStyle"
            android:text="@string/pressure" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/findWeather"
            android:textColor="#fff"
            android:textSize="25sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/form"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:width="200dp"
            android:background="#fff"
            android:hint="@string/cityName"
            android:imeOptions="actionDone"
            android:inputType="textShortMessage"
            android:onClick="sendCity"
            tools:ignore="Autofill,LabelFor" />
    </LinearLayout>

</RelativeLayout>